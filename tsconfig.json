{
  "angularCompilerOptions": {
    "debug": false
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnusedLabels": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "public/js",
    "rootDir": ".",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jasmine"]
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
